<Page x:Class="SummerTest.Pages.HttpReqPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SummerTest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HttpReqPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="351*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="UrlText" Margin="94,10,28,9" TextWrapping="Wrap"/>
        <Button x:Name="PushButton" Content="Push" Grid.Column="1" Margin="15,10,10,9" Click="PushButton_Click"/>
        <TextBox x:Name="ResponseText" Margin="10,88,28,10" TextWrapping="Wrap" Grid.Row="2"/>
        <ComboBox x:Name="MethodCombo" Margin="484,10,28,14" Grid.Row="1">
            <ComboBoxItem Content="GET"/>
            <ComboBoxItem Content="POST"/>
        </ComboBox>

    </Grid>
</Page>
