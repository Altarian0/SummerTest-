<Page x:Class="SummerTest.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SummerTest.Pages"
      xmlns:control="clr-namespace:SummerTest.Control"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="323*"/>
            <RowDefinition Height="127*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="583*"/>
            <ColumnDefinition Width="217*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Button" Height="30" Margin="0,0,10,60" VerticalAlignment="Bottom" Click="Button_Click" Grid.Row="1" HorizontalAlignment="Right" Width="102" Grid.Column="1"/>
        <control:PhoneMask x:Name="PhoneNum" Margin="0,0,0,52" VerticalAlignment="Bottom" Grid.Row="1" HorizontalAlignment="Left" Width="435"/>
    </Grid>
</Page>
