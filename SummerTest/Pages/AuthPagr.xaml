<Page x:Class="SummerTest.Pages.AuthPagr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SummerTest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPagr">

    <Grid Background="White" Margin="0,30,0,-30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="429*"/>
            <ColumnDefinition Width="171*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="201*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="148*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="LoginBox" Margin="34,21,31,0" TextWrapping="Wrap" Text="TextBox" Grid.Row="1" Grid.Column="1" Height="25" VerticalAlignment="Top"/>
        <TextBox x:Name="PasswordBox" Margin="34,12,31,0" TextWrapping="Wrap" Text="TextBox" Grid.Row="2" Grid.Column="1" Height="25" VerticalAlignment="Top"/>
        <Button Content="Button" Margin="147,20,137,0" VerticalAlignment="Top" Click="Button_Click" Height="36" Grid.Row="3" Grid.Column="1"/>
    </Grid>
</Page>
