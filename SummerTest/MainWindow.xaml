<Window x:Class="SummerTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SummerTest"
        mc:Ignorable="d" Closed="Window_Closed"
        Title="MainWindow" MinHeight="400" MinWidth="600" Height="520" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,0,0,30"/>

        <Border Background="Gray" BorderBrush="Gray" Height="30" VerticalAlignment="Bottom"/>
        <Label Name="TimeLabel" Foreground="White" VerticalAlignment="Bottom" Height="30" FontSize="16" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
